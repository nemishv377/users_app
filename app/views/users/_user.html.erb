<div id="<%= dom_id user %>">
  
  <tr>
  <td class="my-5"> <%= user.first_name %> </td>

  <td class="my-5"> <%= user.last_name %> </td>

  <td class="my-5"> <%= user.email %> </td>

  <td class="my-5"> <%= user.gender %> </td>

  <td class="my-5"> <%= user.hobbies.join(", ") %>  </td>

  <td class="my-5"> <%= State.find(user.state_id).name %>  </td>

  <td class="my-5"> <%= City.find(user.city_id).name %> </td>

  <td>
    <%= link_to "Show", user_path(user), class: "ml-2 rounded-lg py-3 px-3 bg-gray-300 inline-block font-medium" %>
  </td>

  <td>
    <%= link_to "Edit", edit_user_path(user), class: "ml-2 rounded-lg py-3 px-3 bg-teal-200 inline-block font-medium" %>
  </td>
  <td>
  <%= link_to "Delete", user_path(user), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              }, class: "ml-2 rounded-lg py-3 px-3 text-stone bg-red-500 font-medium" %>
  </td>

</div>
