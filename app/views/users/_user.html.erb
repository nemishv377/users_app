<div id="<%= dom_id user %>">
  
  <tr>
    <td class="my-5"> <%= user.first_name %> </td>
    <td class="my-5"> <%= user.last_name %> </td>
    <td class="my-5"> <%= user.email %> </td>
    <td class="my-5"> <%= user.gender %> </td>
    <td class="my-5"> <%= user.hobbies.join(", ") %>  </td>

    
    <% if default_address %>
      <td class="my-5"> <%= default_address.state.name %>  </td>
      <td class="my-5"> <%= default_address.city.name %> </td>
    <% elsif user_addresses.length > 0 %>
      <td class="my-5"> <%= user.addresses.first.state.name %>  </td>
      <td class="my-5"> <%= user.addresses.first.city.name %> </td>
    <% else %>
      <td colspan="2" class="my-5" style="color:red;">Add addreess </td>
    <% end %>

    <td> <%= link_to "Show", user_path(user), class: "ml-2 rounded-lg py-3 px-3 bg-gray-300 inline-block font-medium" %> </td>
    <td>
      <%= link_to "Delete", user_path(user), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                  }, class: "ml-2 rounded-lg py-3 px-3 text-white bg-red-500 font-medium" %>
    </td>
  </tr>

</div>
